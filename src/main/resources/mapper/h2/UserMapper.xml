<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapperとxmlのマッピング -->
<mapper namespace="com.pepole.tesusaku.repository.UserMapper">

  <!-- マッピング定義(ユーザー) -->
  <resultMap type="com.pepole.tesusaku.domain.user.model.MUser" id="user">
    <id column="user_id" property="userId" />
    <result column="password" property="password" />
    <result column="user_name" property="userName" />
    <result column="role" property="role" />
  </resultMap>

  <!-- ユーザー1件登録 -->
  <insert id="insertOne">
    insert into m_user(
        user_id
      , password
      , user_name
      , role
    )
    values (
        #{userId}
      , #{password}
      , #{userName}
      , #{role}
    )
  </insert>

  <!-- ユーザー複数件取得 -->
  <select id="findMany" resultType="MUser">
    select
      *
    from
      m_user
    <where>
      <if test="userId != null">
        user_id like '%' || #{userId} || '%'
      </if>
      <if test="userName != null">
        and user_name like '%' || #{userName} || '%'
      </if>
    </where>
  </select>

  <!-- ユーザー1件検索 -->
  <select id="findOne" resultMap="user">
    select
        m_user.user_id
      , m_user.password
      , m_user.user_name
    from
      m_user
    where
      m_user.user_id = #{userId}
  </select>

  <!-- ユーザー1件更新 -->
  <update id="updateOne">
    update
      m_user
    set
        password = #{password}
      , user_name = #{userName}
    where
      user_id = #{userId}
  </update>

  <!-- ユーザー1件削除 -->
  <delete id="deleteOne">
    delete from
      m_user
    where
      user_id = #{userId}
  </delete>

  <!-- ログインユーザー情報取得 -->
  <select id="findLoginUser" resultType="MUser">
    select
      *
    from
      m_user
    where
      user_id = #{userId}
  </select>
</mapper>